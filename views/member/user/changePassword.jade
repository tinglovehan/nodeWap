                input#newPass(type='password',name='newPass', placeholder='请输入6-20位字母、数字或符号的新密码')
            //p.form-explian 6-20位字母、数字或符号
            .input-box.text
              input(type='password',name="enterpassword", placeholder='请重新输入新密码')
            .input-box.input-button
              input#setNewPassword(type='button', value='确定修改')
