extends ../../layout
block stylesheets
    link(rel="stylesheet", href="/stylesheets/order.css")
block content
    -var datas=data[0].data
    include ../../common/index
    header.myorder-header
        p.myorder-explian
            span 订单号：#{datas.orderNo}
            span 退单时间：#{datas.refundTime}
        h3.myorder-title=datas.orderInfo
        p.myorder-pay
            | 退单数量：
            span.price
                em #{datas.refundNum}
            em.pay-mold.payed.fr
                +refundStatus(datas.refundStatus)
        p.myorder-pay
            | 退单金额：
            span.price
                em ￥
                    | #{datas.refundSum}
        if  datas.refundStatus==='9'
            p.myorder-pay
                | 驳回理由：
                span #{datas.rejectReason}

    .page-line

