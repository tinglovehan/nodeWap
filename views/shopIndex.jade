                       //    if item.goodsLabel
                       //        if item.goodsLabel.indexOf(',') !== -1
                       //            - var labelsArrow = item.goodsLabel.split(',');
                       //            each label in labelsArrow
                       //                span #{label}
                       //        else
                       //            span #{item.labels}
                       h2 #{item.name}
                       p
                           em ¥
                           | #{item.price}



